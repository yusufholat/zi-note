<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:Zinote.Helpers"
             x:Class="Zinote.Pages.HubPage"
             BackgroundColor="{DynamicResource DynamicPageBackground}">

    <Shell.TitleView>
        <Grid Margin="0,0,10,0">
            <Label Text="{helpers:Translate AppName}" 
                   FontSize="20" 
                   FontAttributes="Bold" 
                   VerticalOptions="Center" 
                   HorizontalOptions="Center" 
                   TextColor="{DynamicResource DynamicShellTitleColor}"/>
            
            <HorizontalStackLayout HorizontalOptions="End" VerticalOptions="Center" Spacing="15">
                <Label x:Name="LanguageLabel" Text="EN" 
                       FontSize="16" FontAttributes="Bold"
                       VerticalOptions="Center"
                       TextColor="{DynamicResource DynamicShellTitleColor}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLanguageClicked"/>
                    </Label.GestureRecognizers>
                </Label>
                <Label Text="{DynamicResource DynamicThemeIcon}" 
                       FontSize="22" 
                       VerticalOptions="Center" 
                       TextColor="{DynamicResource DynamicShellTitleColor}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnThemeClicked"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>
        </Grid>
    </Shell.TitleView>
    
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30">
            <Label Text="{helpers:Translate WelcomeHub}" FontSize="32" HorizontalOptions="Center" FontAttributes="Bold" TextColor="{DynamicResource DynamicPrimaryText}" />
            <Label Text="{helpers:Translate SelectModule}" FontSize="18" HorizontalOptions="Center" TextColor="{DynamicResource DynamicSecondaryText}" />

            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto" ColumnSpacing="20" Margin="0,30,0,0">
                
                <!-- Health Dictionary Hub -->
                <Border Grid.Column="0" HeightRequest="200" StrokeShape="RoundRectangle 15" BackgroundColor="{DynamicResource DynamicCardBackground}" Stroke="{DynamicResource DynamicBorder}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnHubTapped" CommandParameter="health_dictionary" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="15">
                        <Label Text="⚕️" FontSize="60" HorizontalOptions="Center" TextColor="{DynamicResource DynamicPrimaryText}"/>
                        <Label Text="{helpers:Translate HealthDict}" TextColor="{DynamicResource DynamicPrimaryText}" FontSize="22" FontAttributes="Bold" HorizontalOptions="Center" HorizontalTextAlignment="Center" />
                        <Label Text="{helpers:Translate HealthDictSub}" TextColor="{DynamicResource DynamicSecondaryText}" FontSize="14" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>

                <!-- Military Dictionary Hub -->
                <Border Grid.Column="1" HeightRequest="200" StrokeShape="RoundRectangle 15" BackgroundColor="{DynamicResource DynamicCardBackground}" Stroke="{DynamicResource DynamicBorder}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnHubTapped" CommandParameter="military_dictionary" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="15">
                        <Label Text="⚔️" FontSize="60" HorizontalOptions="Center" TextColor="{DynamicResource DynamicPrimaryText}"/>
                        <Label Text="{helpers:Translate MilitaryDict}" TextColor="{DynamicResource DynamicPrimaryText}" FontSize="22" FontAttributes="Bold" HorizontalOptions="Center" HorizontalTextAlignment="Center" />
                        <Label Text="{helpers:Translate MilitaryDictSub}" TextColor="{DynamicResource DynamicSecondaryText}" FontSize="14" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>

            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
