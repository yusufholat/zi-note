<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:Zinote.Helpers"
             xmlns:components="clr-namespace:Zinote.Resources.Components"
             x:Class="Zinote.Pages.HubPage"
             BackgroundColor="{DynamicResource DynamicPageBackground}">

    <Shell.TitleView>
        <components:HeaderView TitleText="{x:Static helpers:Constants.AppName}" />
    </Shell.TitleView>
    
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30"> 
            <Label Text="{helpers:Translate WelcomeHub}" FontSize="32" HorizontalOptions="Center" FontAttributes="Bold" TextColor="{DynamicResource DynamicPrimaryText}" />
            <Label Text="{helpers:Translate SelectModule}" FontSize="18" HorizontalOptions="Center" TextColor="{DynamicResource DynamicSecondaryText}" />

            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto" ColumnSpacing="20" Margin="0,30,0,0">
                
                <!-- Health Dictionary Hub -->
                <Border Grid.Column="0" HeightRequest="200" StrokeShape="RoundRectangle 15" BackgroundColor="{DynamicResource DynamicCardBackground}" Stroke="{DynamicResource DynamicBorder}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnHubTapped" CommandParameter="health_dictionary" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="5">
                        <Label Text="⚕️" FontSize="50" HorizontalOptions="Center" TextColor="{DynamicResource DynamicPrimaryText}"/>
                        <Label Text="{helpers:Translate HealthDict}" 
                               TextColor="{DynamicResource DynamicPrimaryText}" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               HorizontalOptions="Center" 
                               HorizontalTextAlignment="Center" 
                               MaxLines="1" />
                        <Label Text="{helpers:Translate HealthDictSub}" TextColor="{DynamicResource DynamicSecondaryText}" FontSize="13" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>

                <!-- Military Dictionary Hub -->
                <Border Grid.Column="1" HeightRequest="200" StrokeShape="RoundRectangle 15" BackgroundColor="{DynamicResource DynamicCardBackground}" Stroke="{DynamicResource DynamicBorder}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnHubTapped" CommandParameter="military_dictionary" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="5">
                        <Label Text="⚔️" FontSize="50" HorizontalOptions="Center" TextColor="{DynamicResource DynamicPrimaryText}"/>
                        <Label Text="{helpers:Translate MilitaryDict}" 
                               TextColor="{DynamicResource DynamicPrimaryText}" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               HorizontalOptions="Center" 
                               HorizontalTextAlignment="Center" 
                               MaxLines="1" />
                        <Label Text="{helpers:Translate MilitaryDictSub}" TextColor="{DynamicResource DynamicSecondaryText}" FontSize="13" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>

            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
