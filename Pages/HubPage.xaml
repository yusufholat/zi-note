<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:Zinote.Helpers"
             x:Class="Zinote.Pages.HubPage"
             BackgroundColor="{DynamicResource DynamicPageBackground}">

    <Shell.TitleView>
        <Grid Margin="0,0,10,0">
            <Label Text="{x:Static helpers:Constants.AppName}" 
                   FontSize="20" 
                   FontAttributes="Bold" 
                   VerticalOptions="Center" 
                   HorizontalOptions="Center" 
                   TextColor="White"/>
            <Label Text="{DynamicResource DynamicThemeIcon}" 
                   FontSize="22" 
                   VerticalOptions="Center" 
                   HorizontalOptions="End"
                   TextColor="White"
                   Margin="0,0,10,0">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnThemeClicked"/>
                </Label.GestureRecognizers>
            </Label>
        </Grid>
    </Shell.TitleView>
    
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30">
            <Label Text="Welcome to Data Hub" FontSize="32" HorizontalOptions="Center" FontAttributes="Bold" TextColor="{DynamicResource DynamicPrimaryText}" />
            <Label Text="Select a module to manage" FontSize="18" HorizontalOptions="Center" TextColor="{DynamicResource DynamicSecondaryText}" />

            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto" ColumnSpacing="20" Margin="0,30,0,0">
                
                <!-- Health Dictionary Hub -->
                <Frame Grid.Column="0" HeightRequest="200" CornerRadius="15" BackgroundColor="{DynamicResource DynamicCardBackground}" BorderColor="{DynamicResource DynamicBorder}" HasShadow="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnHubTapped" CommandParameter="health_dictionary" />
                    </Frame.GestureRecognizers>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="15">
                        <Label Text="⚕️" FontSize="60" HorizontalOptions="Center" TextColor="{DynamicResource DynamicPrimaryText}"/>
                        <Label Text="Health Dictionary" TextColor="{DynamicResource DynamicPrimaryText}" FontSize="22" FontAttributes="Bold" HorizontalOptions="Center" HorizontalTextAlignment="Center" />
                        <Label Text="Sağlık Sözlüğü" TextColor="{DynamicResource DynamicSecondaryText}" FontSize="14" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Military Dictionary Hub -->
                <Frame Grid.Column="1" HeightRequest="200" CornerRadius="15" BackgroundColor="{DynamicResource DynamicCardBackground}" BorderColor="{DynamicResource DynamicBorder}" HasShadow="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnHubTapped" CommandParameter="military_dictionary" />
                    </Frame.GestureRecognizers>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="15">
                        <Label Text="⚔️" FontSize="60" HorizontalOptions="Center" TextColor="{DynamicResource DynamicPrimaryText}"/>
                        <Label Text="Military Dictionary" TextColor="{DynamicResource DynamicPrimaryText}" FontSize="22" FontAttributes="Bold" HorizontalOptions="Center" HorizontalTextAlignment="Center" />
                        <Label Text="Askeri Sözlük" TextColor="{DynamicResource DynamicSecondaryText}" FontSize="14" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Frame>

            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
