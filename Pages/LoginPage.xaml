<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zinote.Pages.LoginPage"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0F2027" Offset="0.0" />
            <GradientStop Color="#203A43" Offset="0.5" />
            <GradientStop Color="#2C5364" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid>

        <!-- Main Content -->
        <Border Stroke="Transparent"
                StrokeThickness="0"
                BackgroundColor="#20FFFFFF"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="340"
                Padding="30"
                StrokeShape="RoundRectangle 20">
            
            <VerticalStackLayout Spacing="25">
                <!-- Branding -->
                <Image Source="appicon_logo.svg"
                       HeightRequest="80"
                       HorizontalOptions="Center" />
                       
                <Label Text="zi-lex"
                       FontSize="28"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="White"
                       Margin="0,-10,0,0"/>

                <Label Text="Sign in to continue"
                       FontSize="15"
                       HorizontalOptions="Center"
                       TextColor="#D0D0D0" />

                <!-- Inputs -->
                <VerticalStackLayout Spacing="15">
                    <Border Stroke="#50FFFFFF" StrokeShape="RoundRectangle 10" BackgroundColor="#15FFFFFF" Padding="15,0" HeightRequest="50">
                        <Entry x:Name="EmailEntry"
                               Placeholder="Email"
                               PlaceholderColor="#A0A0A0"
                               TextColor="White"
                               Keyboard="Email"
                               BackgroundColor="Transparent"
                               VerticalOptions="Center" />
                    </Border>
    
                    <Border Stroke="#50FFFFFF" StrokeShape="RoundRectangle 10" BackgroundColor="#15FFFFFF" Padding="15,0" HeightRequest="50">
                        <Entry x:Name="PasswordEntry"
                               Placeholder="Password"
                               PlaceholderColor="#A0A0A0"
                               TextColor="White"
                               IsPassword="True"
                               BackgroundColor="Transparent"
                               VerticalOptions="Center" />
                    </Border>
                </VerticalStackLayout>

                <!-- Actions -->
                <Button x:Name="LoginButton"
                        Text="LOGIN"
                        Clicked="OnLoginClicked"
                        BackgroundColor="#007ACC"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="25"
                        HeightRequest="50"
                        Margin="0,10,0,0">
                    <Button.Shadow>
                        <Shadow Brush="Black" Offset="0,4" Opacity="0.3" Radius="10"/>
                    </Button.Shadow>
                </Button>

                <Button x:Name="RegisterButton"
                        Text="Create Account"
                        Clicked="OnRegisterClicked"
                        BackgroundColor="Transparent"
                        TextColor="#7BDDEF"
                        FontSize="14"
                        HeightRequest="30"
                        Padding="0" 
                        HorizontalOptions="Center"/>
                
                <BoxView HeightRequest="1" Color="#30FFFFFF" Margin="20,0" />

                <Button x:Name="GuestButton"
                        Text="Continue as Guest"
                        Clicked="OnGuestClicked"
                        BackgroundColor="Transparent"
                        TextColor="#E0E0E0"
                        BorderColor="#50FFFFFF"
                        BorderWidth="1"
                        CornerRadius="20"
                        HeightRequest="40"
                        FontSize="13" />

            </VerticalStackLayout>
        </Border>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" BackgroundColor="#80000000" IsVisible="False">
            <ActivityIndicator IsRunning="True" Color="White" VerticalOptions="Center" HorizontalOptions="Center" />
        </Grid>
    </Grid>

</ContentPage>
