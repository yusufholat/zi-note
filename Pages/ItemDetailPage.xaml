<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:Zinote.Helpers"
             xmlns:components="clr-namespace:Zinote.Resources.Components"
             x:Class="Zinote.Pages.ItemDetailPage"
             Title="Item Details"
             Background="{DynamicResource PageBackgroundBrush}">
    <Shell.TitleView>
        <components:HeaderView TitleText="{helpers:Translate Details}" ShowLogo="False" />
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">
            
            <!-- Basic Info Card -->
            <Border StrokeShape="RoundRectangle 10" BackgroundColor="{DynamicResource DynamicCardBackground}" Padding="15" Stroke="Transparent">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,0" Opacity="0.1" Radius="5"/>
                </Border.Shadow>
                <VerticalStackLayout Spacing="15">
                     <Label Text="{helpers:Translate GeneralInfo}" FontSize="16" FontAttributes="Bold" TextColor="{DynamicResource DynamicAccent}" Margin="0,0,0,5"/>
                     
                     <VerticalStackLayout Spacing="5">
                        <Label Text="{helpers:Translate SourceTerm}" TextColor="{DynamicResource DynamicSecondaryText}" FontSize="12" FontAttributes="Bold"/>
                        <Border Padding="0" StrokeShape="RoundRectangle 5" Stroke="{DynamicResource DynamicBorder}" BackgroundColor="{DynamicResource DynamicInputBackground}">
                             <Entry x:Name="SourceTermEntry" Placeholder="{helpers:Translate EnterSource}" BackgroundColor="Transparent" TextColor="{DynamicResource DynamicPrimaryText}" PlaceholderColor="{DynamicResource DynamicSecondaryText}" VerticalTextAlignment="Center"/>
                        </Border>
                     </VerticalStackLayout>

                     <VerticalStackLayout Spacing="5">
                        <Label Text="{helpers:Translate TargetTerm}" TextColor="{DynamicResource DynamicSecondaryText}" FontSize="12" FontAttributes="Bold"/>
                        <Border Padding="0" StrokeShape="RoundRectangle 5" Stroke="{DynamicResource DynamicBorder}" BackgroundColor="{DynamicResource DynamicInputBackground}">
                             <Entry x:Name="TargetTermEntry" Placeholder="{helpers:Translate EnterTarget}" BackgroundColor="Transparent" TextColor="{DynamicResource DynamicPrimaryText}" PlaceholderColor="{DynamicResource DynamicSecondaryText}" VerticalTextAlignment="Center"/>
                        </Border>
                     </VerticalStackLayout>

                     <VerticalStackLayout Spacing="5">
                        <Label Text="{helpers:Translate Definition}" TextColor="{DynamicResource DynamicSecondaryText}" FontSize="12" FontAttributes="Bold"/>
                        <Border Padding="0" StrokeShape="RoundRectangle 5" Stroke="{DynamicResource DynamicBorder}" BackgroundColor="{DynamicResource DynamicInputBackground}">
                             <Editor x:Name="DefinitionEntry" Placeholder="{helpers:Translate EnterDef}" AutoSize="TextChanges" MinimumHeightRequest="80" BackgroundColor="Transparent" TextColor="{DynamicResource DynamicPrimaryText}" PlaceholderColor="{DynamicResource DynamicSecondaryText}"/>
                        </Border>
                     </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Details Card -->
            <Border StrokeShape="RoundRectangle 10" BackgroundColor="{DynamicResource DynamicCardBackground}" Padding="15" Stroke="Transparent">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,0" Opacity="0.1" Radius="5"/>
                </Border.Shadow>
                <VerticalStackLayout Spacing="15">
                     <Label Text="{helpers:Translate Details}" FontSize="16" FontAttributes="Bold" TextColor="{DynamicResource DynamicAccent}" Margin="0,0,0,5"/>

                     <VerticalStackLayout Spacing="5">
                        <Label Text="{helpers:Translate Notes}" TextColor="{DynamicResource DynamicSecondaryText}" FontSize="12" FontAttributes="Bold"/>
                        <Border Padding="0" StrokeShape="RoundRectangle 5" Stroke="{DynamicResource DynamicBorder}" BackgroundColor="{DynamicResource DynamicInputBackground}">
                             <Editor x:Name="NotesEntry" Placeholder="{helpers:Translate EnterNotes}" AutoSize="TextChanges" MinimumHeightRequest="80" BackgroundColor="Transparent" TextColor="{DynamicResource DynamicPrimaryText}" PlaceholderColor="{DynamicResource DynamicSecondaryText}"/>
                        </Border>
                     </VerticalStackLayout>

                     <VerticalStackLayout Spacing="5">
                        <Label Text="{helpers:Translate Example}" TextColor="{DynamicResource DynamicSecondaryText}" FontSize="12" FontAttributes="Bold"/>
                        <Border Padding="0" StrokeShape="RoundRectangle 5" Stroke="{DynamicResource DynamicBorder}" BackgroundColor="{DynamicResource DynamicInputBackground}">
                             <Editor x:Name="ExampleEntry" Placeholder="{helpers:Translate EnterExample}" AutoSize="TextChanges" MinimumHeightRequest="80" BackgroundColor="Transparent" TextColor="{DynamicResource DynamicPrimaryText}" PlaceholderColor="{DynamicResource DynamicSecondaryText}"/>
                        </Border>
                     </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Metadata/Settings Card -->
            <Border StrokeShape="RoundRectangle 10" BackgroundColor="{DynamicResource DynamicCardBackground}" Padding="15" Stroke="Transparent">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,0" Opacity="0.1" Radius="5"/>
                </Border.Shadow>
                <VerticalStackLayout Spacing="15">
                     <Label Text="{helpers:Translate Settings}" FontSize="16" FontAttributes="Bold" TextColor="{DynamicResource DynamicAccent}" Margin="0,0,0,5"/>

                     <Grid ColumnDefinitions="*, Auto, Auto" ColumnSpacing="10" BackgroundColor="{DynamicResource DynamicInputBackground}" Padding="10">
                        <Label Grid.Column="0" Text="{helpers:Translate Forbidden}" VerticalOptions="Center" FontAttributes="Bold" TextColor="{DynamicResource DynamicPrimaryText}"/>
                        <Label Grid.Column="1" x:Name="ForbiddenStateLabel" Text="HayÄ±r" VerticalOptions="Center" TextColor="{DynamicResource DynamicPrimaryText}" FontAttributes="Bold"/>
                        <Switch Grid.Column="2" x:Name="ForbiddenSwitch" VerticalOptions="Center" Toggled="OnForbiddenToggled" OnColor="{DynamicResource DynamicAccent}" ThumbColor="{DynamicResource DynamicPrimaryText}" />
                     </Grid>

                     <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                         <VerticalStackLayout Grid.Column="0" Spacing="5">
                            <Label Text="{helpers:Translate Domain}" TextColor="{DynamicResource DynamicSecondaryText}" FontSize="12" FontAttributes="Bold"/>
                            <Border Padding="0" StrokeShape="RoundRectangle 5" Stroke="{DynamicResource DynamicBorder}" BackgroundColor="{DynamicResource DynamicInputBackground}">
                                 <Entry x:Name="DomainEntry" Placeholder="{helpers:Translate Domain}" BackgroundColor="Transparent" TextColor="{DynamicResource DynamicPrimaryText}" PlaceholderColor="{DynamicResource DynamicSecondaryText}" VerticalTextAlignment="Center"/>
                            </Border>
                         </VerticalStackLayout>

                         <VerticalStackLayout Grid.Column="1" Spacing="5">
                            <Label Text="{helpers:Translate SubDomain}" TextColor="{DynamicResource DynamicSecondaryText}" FontSize="12" FontAttributes="Bold"/>
                            <Border Padding="0" StrokeShape="RoundRectangle 5" Stroke="{DynamicResource DynamicBorder}" BackgroundColor="{DynamicResource DynamicInputBackground}">
                                 <Entry x:Name="SubDomainEntry" Placeholder="{helpers:Translate SubDomain}" BackgroundColor="Transparent" TextColor="{DynamicResource DynamicPrimaryText}" PlaceholderColor="{DynamicResource DynamicSecondaryText}" VerticalTextAlignment="Center"/>
                            </Border>
                         </VerticalStackLayout>
                     </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Actions -->
            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center" Margin="0,10,0,20">
                <Button x:Name="SaveButton" Text="{helpers:Translate Save}" Clicked="OnSaveClicked" WidthRequest="120" HeightRequest="45" CornerRadius="22" BackgroundColor="{DynamicResource DynamicAccent}" TextColor="{DynamicResource DynamicButtonText}" FontAttributes="Bold"/>
                <Button x:Name="CancelButton" Text="{helpers:Translate Cancel}" Clicked="OnCancelClicked" WidthRequest="120" HeightRequest="45" CornerRadius="22" BackgroundColor="{DynamicResource DynamicBorder}" TextColor="{DynamicResource DynamicPrimaryText}" FontAttributes="Bold"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
