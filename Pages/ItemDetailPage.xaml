<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zinote.Pages.ItemDetailPage"
             Title="Item Details">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30">
            <Label Text="Source Term (EN)" FontSize="Medium" FontAttributes="Bold" />
            <Entry x:Name="SourceTermEntry" Placeholder="Enter source term (English)" />

            <Label Text="Target Term (TR)" FontSize="Medium" FontAttributes="Bold" />
            <Entry x:Name="TargetTermEntry" Placeholder="Enter target term (Turkish)" />

            <Label Text="Definition (Optional)" FontSize="Medium" FontAttributes="Bold" />
            <Editor x:Name="DefinitionEntry" Placeholder="Enter definition" AutoSize="TextChanges" MinimumHeightRequest="100" />

            <!-- Optional Matecat Fields -->
            <Label Text="Domain (Optional)" FontSize="Medium" FontAttributes="Bold" />
            <Entry x:Name="DomainEntry" Placeholder="Enter domain" />

            <Label Text="SubDomain (Optional)" FontSize="Medium" FontAttributes="Bold" />
            <Entry x:Name="SubDomainEntry" Placeholder="Enter subdomain" />

            <Label Text="Notes (Optional)" FontSize="Medium" FontAttributes="Bold" />
            <Editor x:Name="NotesEntry" Placeholder="Enter notes" AutoSize="TextChanges" />

            <Label Text="Example of Use (Optional)" FontSize="Medium" FontAttributes="Bold" />
            <Editor x:Name="ExampleEntry" Placeholder="Enter example" AutoSize="TextChanges" />

            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                <Label Text="Forbidden (Optional)" FontSize="Medium" FontAttributes="Bold" VerticalOptions="Center" />
                <Switch x:Name="ForbiddenSwitch" VerticalOptions="Center" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center" Margin="0,20,0,0">
                <Button Text="Save" Clicked="OnSaveClicked" WidthRequest="100" />
                <Button Text="Cancel" Clicked="OnCancelClicked" WidthRequest="100" BackgroundColor="Gray" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
