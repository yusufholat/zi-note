<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:Zinote.Helpers"
             x:Class="Zinote.Pages.ItemDetailPage"
             Title="Item Details">
    <Shell.TitleView>
        <Grid Margin="0,0,10,0">
            <Label Text="{helpers:Translate Details}" 
                   FontSize="20" 
                   FontAttributes="Bold" 
                   VerticalOptions="Center" 
                   HorizontalOptions="Center" 
                   TextColor="{DynamicResource DynamicShellTitleColor}"/>
            
            <HorizontalStackLayout HorizontalOptions="End" VerticalOptions="Center" Spacing="15">
                <Label x:Name="LanguageLabel" Text="EN" 
                       FontSize="16" FontAttributes="Bold"
                       VerticalOptions="Center"
                       TextColor="{DynamicResource DynamicShellTitleColor}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLanguageClicked"/>
                    </Label.GestureRecognizers>
                </Label>
                <Label Text="{DynamicResource DynamicThemeIcon}" 
                       FontSize="22" 
                       VerticalOptions="Center" 
                       TextColor="{DynamicResource DynamicShellTitleColor}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnThemeClicked"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>
        </Grid>
    </Shell.TitleView>

    <ScrollView BackgroundColor="{DynamicResource DynamicPageBackground}">
        <VerticalStackLayout Spacing="15" Padding="20">
            
            <!-- Basic Info Card -->
            <Frame CornerRadius="10" HasShadow="True" BackgroundColor="{DynamicResource DynamicCardBackground}" Padding="15" BorderColor="Transparent">
                <VerticalStackLayout Spacing="15">
                     <Label Text="{helpers:Translate GeneralInfo}" FontSize="16" FontAttributes="Bold" TextColor="{DynamicResource DynamicAccent}" Margin="0,0,0,5"/>
                     
                     <VerticalStackLayout Spacing="5">
                        <Label Text="{helpers:Translate SourceTerm}" TextColor="{DynamicResource DynamicSecondaryText}" FontSize="12" FontAttributes="Bold"/>
                        <Frame Padding="0" CornerRadius="5" HasShadow="False" BorderColor="{DynamicResource DynamicBorder}" BackgroundColor="{DynamicResource DynamicInputBackground}">
                             <Entry x:Name="SourceTermEntry" Placeholder="{helpers:Translate EnterSource}" BackgroundColor="Transparent" TextColor="{DynamicResource DynamicPrimaryText}" PlaceholderColor="{DynamicResource DynamicSecondaryText}"/>
                        </Frame>
                     </VerticalStackLayout>

                     <VerticalStackLayout Spacing="5">
                        <Label Text="{helpers:Translate TargetTerm}" TextColor="{DynamicResource DynamicSecondaryText}" FontSize="12" FontAttributes="Bold"/>
                        <Frame Padding="0" CornerRadius="5" HasShadow="False" BorderColor="{DynamicResource DynamicBorder}" BackgroundColor="{DynamicResource DynamicInputBackground}">
                             <Entry x:Name="TargetTermEntry" Placeholder="{helpers:Translate EnterTarget}" BackgroundColor="Transparent" TextColor="{DynamicResource DynamicPrimaryText}" PlaceholderColor="{DynamicResource DynamicSecondaryText}"/>
                        </Frame>
                     </VerticalStackLayout>

                     <VerticalStackLayout Spacing="5">
                        <Label Text="{helpers:Translate Definition}" TextColor="{DynamicResource DynamicSecondaryText}" FontSize="12" FontAttributes="Bold"/>
                        <Frame Padding="5" CornerRadius="5" HasShadow="False" BorderColor="{DynamicResource DynamicBorder}" BackgroundColor="{DynamicResource DynamicInputBackground}">
                             <Editor x:Name="DefinitionEntry" Placeholder="{helpers:Translate EnterDef}" AutoSize="TextChanges" MinimumHeightRequest="80" BackgroundColor="Transparent" TextColor="{DynamicResource DynamicPrimaryText}" PlaceholderColor="{DynamicResource DynamicSecondaryText}"/>
                        </Frame>
                     </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Details Card -->
            <Frame CornerRadius="10" HasShadow="True" BackgroundColor="{DynamicResource DynamicCardBackground}" Padding="15" BorderColor="Transparent">
                <VerticalStackLayout Spacing="15">
                     <Label Text="{helpers:Translate Details}" FontSize="16" FontAttributes="Bold" TextColor="{DynamicResource DynamicAccent}" Margin="0,0,0,5"/>

                     <VerticalStackLayout Spacing="5">
                        <Label Text="{helpers:Translate Notes}" TextColor="{DynamicResource DynamicSecondaryText}" FontSize="12" FontAttributes="Bold"/>
                        <Frame Padding="5" CornerRadius="5" HasShadow="False" BorderColor="{DynamicResource DynamicBorder}" BackgroundColor="{DynamicResource DynamicInputBackground}">
                             <Editor x:Name="NotesEntry" Placeholder="{helpers:Translate EnterNotes}" AutoSize="TextChanges" BackgroundColor="Transparent" TextColor="{DynamicResource DynamicPrimaryText}" PlaceholderColor="{DynamicResource DynamicSecondaryText}"/>
                        </Frame>
                     </VerticalStackLayout>

                     <VerticalStackLayout Spacing="5">
                        <Label Text="{helpers:Translate Example}" TextColor="{DynamicResource DynamicSecondaryText}" FontSize="12" FontAttributes="Bold"/>
                        <Frame Padding="5" CornerRadius="5" HasShadow="False" BorderColor="{DynamicResource DynamicBorder}" BackgroundColor="{DynamicResource DynamicInputBackground}">
                             <Editor x:Name="ExampleEntry" Placeholder="{helpers:Translate EnterExample}" AutoSize="TextChanges" BackgroundColor="Transparent" TextColor="{DynamicResource DynamicPrimaryText}" PlaceholderColor="{DynamicResource DynamicSecondaryText}"/>
                        </Frame>
                     </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Metadata/Settings Card -->
            <Frame CornerRadius="10" HasShadow="True" BackgroundColor="{DynamicResource DynamicCardBackground}" Padding="15" BorderColor="Transparent">
                <VerticalStackLayout Spacing="15">
                     <Label Text="{helpers:Translate Settings}" FontSize="16" FontAttributes="Bold" TextColor="{DynamicResource DynamicAccent}" Margin="0,0,0,5"/>

                     <Grid ColumnDefinitions="*, Auto, Auto" ColumnSpacing="10" BackgroundColor="{DynamicResource DynamicInputBackground}" Padding="10">
                        <Label Grid.Column="0" Text="{helpers:Translate Forbidden}" VerticalOptions="Center" FontAttributes="Bold" TextColor="{DynamicResource DynamicPrimaryText}"/>
                        <Label Grid.Column="1" x:Name="ForbiddenStateLabel" Text="HayÄ±r" VerticalOptions="Center" TextColor="{DynamicResource DynamicSecondaryText}"/>
                        <Switch Grid.Column="2" x:Name="ForbiddenSwitch" VerticalOptions="Center" Toggled="OnForbiddenToggled" />
                     </Grid>

                     <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                         <VerticalStackLayout Grid.Column="0" Spacing="5">
                            <Label Text="{helpers:Translate Domain}" TextColor="{DynamicResource DynamicSecondaryText}" FontSize="12" FontAttributes="Bold"/>
                            <Frame Padding="0" CornerRadius="5" HasShadow="False" BorderColor="{DynamicResource DynamicBorder}" BackgroundColor="{DynamicResource DynamicInputBackground}">
                                 <Entry x:Name="DomainEntry" Placeholder="{helpers:Translate Domain}" BackgroundColor="Transparent" TextColor="{DynamicResource DynamicPrimaryText}" PlaceholderColor="{DynamicResource DynamicSecondaryText}"/>
                            </Frame>
                         </VerticalStackLayout>

                         <VerticalStackLayout Grid.Column="1" Spacing="5">
                            <Label Text="{helpers:Translate SubDomain}" TextColor="{DynamicResource DynamicSecondaryText}" FontSize="12" FontAttributes="Bold"/>
                            <Frame Padding="0" CornerRadius="5" HasShadow="False" BorderColor="{DynamicResource DynamicBorder}" BackgroundColor="{DynamicResource DynamicInputBackground}">
                                 <Entry x:Name="SubDomainEntry" Placeholder="{helpers:Translate SubDomain}" BackgroundColor="Transparent" TextColor="{DynamicResource DynamicPrimaryText}" PlaceholderColor="{DynamicResource DynamicSecondaryText}"/>
                            </Frame>
                         </VerticalStackLayout>
                     </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Actions -->
            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center" Margin="0,10,0,20">
                <Button Text="{helpers:Translate Save}" Clicked="OnSaveClicked" WidthRequest="120" HeightRequest="45" CornerRadius="22" BackgroundColor="{DynamicResource DynamicAccent}" TextColor="{DynamicResource DynamicButtonText}" FontAttributes="Bold"/>
                <Button Text="{helpers:Translate Cancel}" Clicked="OnCancelClicked" WidthRequest="120" HeightRequest="45" CornerRadius="22" BackgroundColor="{DynamicResource DynamicBorder}" TextColor="{DynamicResource DynamicPrimaryText}" FontAttributes="Bold"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
